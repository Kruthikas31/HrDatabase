
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <link rel="icon" href="~/Content/st.JPG">
    <title>Starmark Software</title>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/mousetrap/1.4.6/mousetrap.min.js"></script>
    <script src="https://kit.fontawesome.com/4f3cef309e.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/Landingpage.css">
    <script type="text/javascript">
        function search() {
            var search = $('#search-input');
            search.val('');
            search.focus();
        }
        Mousetrap.bind('alt+/', search);

        $(document).ready(function () {
            var now = new Date();
            var hours = now.getHours();
            var msg;

            if (hours < 12) msg = " Hey,Good Morning !"+"@Session["data"]";
            else if (hours < 18) msg = " Hey,Good Afternoon !  "+"@Session["data"]";
          else msg = "Hey,Good Evening !"+"@Session["data"]";
            $('#lblGreetings').html('<p>'+ msg + '</p>');
        });

        function search_model() {

            let input = document.getElementById('search-input').value
            input = input.toLowerCase();
            let y = document.getElementsByClassName('button1');
            let x = document.getElementsByTagName('h6');

            for (i = 0; i < x.length; i++) {
                if (x[i].innerHTML.toLowerCase().includes(input)) {
                    y[i].style.display = "models";
                }
                else {
                    y[i].style.display = "none";

                }
            }
        }


    </script>
</head>

<body>
    <div id="head">
        <nav class="navbar navbar-expand-sm bg-light navbar-lg">
            <img class="logo" src="~/Content/starmark.png">

            <div class="row sea">
                <div class="col-md-9" id="searchs">
                    <input id="search-input" class="form-control input-lg" onkeyup="search_model()"
                           placeholder=" &#xf002;  Search (alt+/) " autocomplete="off" spellcheck="false" autocorrect="off"
                           tabindex="1">
                </div>
                <div class="col-md-2">
                    <p id="lblGreetings"> msg + Welcome @Session["data"]</p>
                </div>
            </div>
            <div id="lgout">
                <button class="fa fa-bell-o fa-2x bell " aria-hidden="true"></button>
            </div>
            <div class="dropdown">
                <button class="profile"><img class="avatar" src="~/Content/profile.png"></button>
                <div class="dropdown-menu ">
                    <a class="dropdown-item" href="#">Edit Profile</a>
                    <a class="dropdown-item disabled" href="#">Change Password</a>
                    <a class="dropdown-item disabled" href="#">Change Theme</a>
                    <a class="dropdown-item" href="@Url.Action("Logout","Home")">Logout</a>
                </div>
            </div>
        </nav>
        <div class="gradient" id="grad"></div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <p id="sidebar">
            </p>
        </div>

        <div class="col-md-9">
            <div class="tab">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <button class="button button1" onclick="window.location='@Url.Action("Upload","docsprepopulateddata")'">
                                    <i class="fa fa-address-card-o fa-4x icon" aria-hidden="true"></i>
                                    <h6>My Details</h6>
                                </button>
                            </td>
                            <td>
                                <button class="button button1">
                                    <i class="fa fa-clock-o fa-4x icon1" aria-hidden="true"></i>
                                    <h6>Attendance</h6>
                                </button>
                            </td>
                            <td>
                                <button class="button button1" onclick="window.location='@Url.Action("BankDetails","Compensation")'">
                                    <i class="fa fa-briefcase fa-4x icon2" aria-hidden="true"></i>
                                    <h6>Compensation</h6>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button class="button button1">
                                    <i class="fa fa-folder-o fa-4x icon4" aria-hidden="true"></i>
                                    <h6>Projects</h6>
                                </button>
                            </td>
                            <td id="HR">
                                <button class="button button1"  onclick="window.location='@Url.Action("Tracking", "Tracking")'">
                                    <i class="fa fa-user-plus fa-4x icon3 " aria-hidden="true"></i>
                                    <h6>Add Candidate</h6>
                                </button>
                            </td>
                            <td>
                                <button class="button button1" id="admin">
                                    <i class="fa fa-user-o fa-4x icon5" aria-hidden="true"
                                       onclick="window.location='@Url.Action("Users", "Admin")'"></i>
                                    <h6>Admin</h6>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>


        </div>
    </div>

    <div class="footer">
        <div class="foot">
            <ol>
                <li><a><button id="support">Get Support</button></a></li>
                <li><a mailto:mrsagar2006@gmail.com?Subject=abc issue" target="_top">Send Feedback</a></li>
                <li>Terms of Use</li>
                <li>FAQ</li>
            </ol>

        </div>
        <center> <p>&copy Starmark Software Pvt.Ltd.2021</p></center>
    </div>
</body>

@if (ViewBag.admin != null)
{
    <script>
        $('#HR').css({ "display": "none" });
    </script>
}
@if (ViewBag.hr != null)
{
    <script>
        $('#admin').css({ "display": "none" });
        //$('#HR').css({ "pointer-events": "auto", "opacity": "1.0"});
    </script>
}
@if (ViewBag.regular != null)
{
    <script>
        $('#admin').css({ "pointer-events": "none", "opacity": "0.5" });
        $('#HR').css({ "pointer-events": "none", "opacity": "0.5" });
    </script>
}
@if (ViewBag.emp != null)
{
    <script>
        $('#admin').css({ "display": "none" });
        $('#HR').css({ "display": "none" });
    </script>
}
@if (ViewBag.message != null)
{
    <script>
        alert("User Role added successfully");
    </script>
}
</html>






